<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="#40a5f3"
        android:state_checked="true"
        android:state_pressed="true">
        <shape>
            <corners android:radius="20dp"/>
            <stroke android:color="#40a5f3" android:width="1dp"/>
            <solid android:color="#FFFFFF"/>
            <padding android:left="10dp" android:right="10dp" android:top="2dp" android:bottom="2dp"/>
        </shape>


    </item>
    <item android:color="#333333">
        <shape>
            <corners android:radius="20dp"/>
            <stroke android:color="#c2c2c2" android:width="1dp"/>
            <solid android:color="#FFFFFF"/>
            <padding android:left="10dp" android:right="10dp" android:top="2dp" android:bottom="2dp"/>
        </shape>

    </item>
</selector>